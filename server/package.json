{
  "name": "vkr-web3",
  "version": "1.0.0",
  "main": "build/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "web3": "^1.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/web3": "^1.2.2",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "ext": "ts",
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "events": {
      "start": "clear"
    }
  }
}
